# CSP Configuration Environment Variables
# Add these to your .env file to customize CSP behavior

# Enable/disable specific CSP features
CSP_REPORT_URI="/api/csp-report"
CSP_REPORT_ONLY="false"  # Set to "true" for testing without blocking

# Additional trusted domains (comma-separated)
# Use these to add project-specific external services without modifying code
ADDITIONAL_API_DOMAINS="https://api.your-service.com,https://api.another-service.com"
ADDITIONAL_CDN_DOMAINS="https://cdn.your-company.com,https://assets.your-site.com"

# Entertainment platform specific APIs
ENTERTAINMENT_API_DOMAINS="https://api.custom-platform.com,https://streaming-api.com"

# Development overrides
DEV_CSP_STRICT="false"  # Set to "true" to use production-like CSP in development

# Third-party service toggles
ENABLE_GOOGLE_ANALYTICS="true"
ENABLE_STRIPE="true" 
ENABLE_SOCIAL_AUTH="true"
ENABLE_SENTRY="true"

# Custom CSP directives (advanced)
CUSTOM_SCRIPT_SRC=""  # Additional script-src domains
CUSTOM_STYLE_SRC=""   # Additional style-src domains
CUSTOM_FONT_SRC=""    # Additional font-src domains
CUSTOM_IMG_SRC=""     # Additional img-src domains

# Nonce generation (for inline scripts/styles)
CSP_USE_NONCES="false"  # Enable to use nonces instead of 'unsafe-inline'