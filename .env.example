# After Dark Systems - Environment Configuration
# Copy this file to .env and configure for your environment

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default
AWS_ACCOUNT_ID=123456789012

# Project Configuration
PROJECT_NAME=afterdarksys
ENVIRONMENT=production
DOMAIN_NAME=afterdarksys.com

# Docker Configuration
DOCKER_REGISTRY=afterdarksys
DOCKER_TAG=latest
BUILD_IMAGES=true
USE_ECR=false

# ECS Configuration
ECS_DESIRED_COUNT=2
ECS_MIN_CAPACITY=1
ECS_MAX_CAPACITY=10

# Service Configuration
MAIN_SITE_CPU=256
MAIN_SITE_MEMORY=512
LOGIN_SERVICE_CPU=256
LOGIN_SERVICE_MEMORY=512
API_GATEWAY_CPU=512
API_GATEWAY_MEMORY=1024

# Feature Flags
SETUP_MONITORING=true
ENABLE_LOGGING=true
ENABLE_METRICS=true
ENABLE_AUTO_SCALING=true
ENABLE_WAF=false

# Security Configuration
SSL_POLICY=ELBSecurityPolicy-TLS-1-2-2017-01
CERTIFICATE_TRANSPARENCY_LOGGING=true

# Monitoring Configuration
LOG_RETENTION_DAYS=7
CPU_TARGET_VALUE=70
MEMORY_TARGET_VALUE=80
ENABLE_CLOUDWATCH_INSIGHTS=true

# Business Configuration (Read-Only)
TOTAL_PLATFORMS=15
ESTIMATED_VALUATION_MIN=50000000
ESTIMATED_VALUATION_MAX=300000000
REVENUE_TIER_HIGH_COUNT=4
REVENUE_TIER_MEDIUM_COUNT=4

# Platform Portfolio (Reference)
# High Revenue Tier: AEIMS, PoliticalMemes.xyz, 9Lives.xyz, SmokeOut.NYC
# Medium Revenue Tier: Undateable.me, OutOfWork.life, NerdyCupid.com, VeriBits.com