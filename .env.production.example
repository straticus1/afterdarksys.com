# Production Environment Configuration Template
# Copy to .env.production and replace with actual values

# Database - Production PostgreSQL with SSL
DATABASE_URL="postgresql://your_db_user:your_secure_password@your_db_host:5432/afterdark_production?sslmode=require&sslcert=client-cert.pem&sslkey=client-key.pem"

# NextAuth Configuration
NEXTAUTH_SECRET="your_production_secret_here_64_chars_minimum_generated_randomly"
NEXTAUTH_URL="https://your-production-domain.com"

# Security Configuration
NODE_ENV="production"

# Rate Limiting (if using)
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="60000"

# Logging Level
LOG_LEVEL="info"

# CORS Origins (comma-separated)
ALLOWED_ORIGINS="https://your-domain.com,https://admin.your-domain.com"

# Session Configuration
SESSION_MAX_AGE="604800"  # 7 days in seconds
SESSION_STRATEGY="jwt"

# Email Configuration (if needed)
# SMTP_HOST=""
# SMTP_PORT=""
# SMTP_USER=""
# SMTP_PASS=""

# Monitoring (if using)
# SENTRY_DSN=""
# NEW_RELIC_LICENSE_KEY=""